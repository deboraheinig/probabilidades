#include <iostream>
#include <time.h>

int opcao() {

    int num = 0;

    std::cout << "1. Rolar um dado" << std::endl;
    std::cout << "2. Rolar mais de um dado" << std::endl;
    std::cout << "3. Avaliar o problema de Monty Hall (DESAFIO)" << std::endl;
    std::cin >> num;

    return num;
}

void calculo(int lados, int roll, int vet[]) {

    double resultcalc, porcent;

    std::cout << "Quantidade de vezes de cada resultado; \n";
    // Executar 1x, parâmetro, repetição
    for (int i = 0; i < lados; i++) {
        std::cout << i+1 << ": " << vet[i] << std::endl;

    }

    resultcalc = roll * 0.01;
    for (int k = 0; k < lados; k++) {
        porcent = vet[k] / resultcalc;
        std::cout << k+1 << ": " << porcent << "%" << std::endl;
    }
}

void opcao1(int lados, int roll) {

    int vet[100] = {0};

    // Executar 1x, parâmetro, repetição
    for (int i = 0; i < roll; i++) {
        int result = rand() % lados;
        vet[result]++;
    }
    calculo(lados, roll, vet);
}

//void opcao2()


void dados(int &lados, int &roll) {
  
     do{
        std::cout << "Qual o numero de lados do seu dado?" << std::endl;
        std::cin >> lados;

        std::cout << "Quantas vezes voce quer rolar o dado?" << std::endl;
        std::cin >> roll;
    }while (lados > 0 && lados <= 100 && roll > 0 && lados * roll > 100);

}

int main()
{

    int lados = 0, roll = 0, num;
    srand(time(NULL));
    num = opcao();

    if (num == 1) {
     
        dados(lados, roll);
        opcao1(lados, roll);
    }

   if (num == 2 ) {

       // dados();
       /// opcao2()
    }
}
